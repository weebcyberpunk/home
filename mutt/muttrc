# general
set editor = `echo \$EDITOR`
set mail_check = 60
set sidebar_visible = yes

set realname = "YOUR NAME"
set from = "YOUREMAIL@gmail.com"

# folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = +INBOX

# imap
set imap_user = "YOUREMAIL@gmail.com"
set imap_pass = FIND A WAY TO ENTER THE PASSWORD
set imap_check_subscribed = yes
unset imap_passive
set imap_keepalive = 300

# smtp
unset record
set smtp_pass = $imap_pass
set smtp_url = "smtps://YOUR USERNAME@smtp.gmail.com"
set my_user = "YOUR USERNAME"
set use_from = yes
set ssl_force_tls = yes
set ssl_starttls = yes
set smtp_authenticators = "login"

# cache
set header_cache = ~/.cache/mutt

# postponed messages
set postponed = +[Gmail]/'POSTPONED DIRECTORY IN YOUR LANGUAGE'

# sources
source ~/.config/mutt/colors.muttrc
source ~/.config/mutt/binds.muttrc
source ~/.config/mutt/vim-keys.rc
